#! /bin/python3
import os
from subprocess import Popen, PIPE
from time import sleep

def execute_command(command, args):
    # t = subp.Popen([command, args])
    return subp.check_output([command, args])

def exe(command, args = []):
    temp = []
    
    os.system(command + args + " &")



#kitty --name autostart_term --class kitty_desktop -e applicationLauncher neofetch &
# kitty --name integrated_terminal_1 --class clear --config ~/.config/kitty/kitty-themes/configs/Clear.conf --hold "/home/pjackim/bin/autostart/scripts/github_issue_list" &
# kitty --name integrated_terminal_0 --class clear --config ~/.config/kitty/kitty-themes/configs/Clear.conf -e applicationLauncher typioca &
