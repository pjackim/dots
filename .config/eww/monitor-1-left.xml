<eww>
    <definitions>
        <def name="m1-left-package">
            <box orientation="v" space-evenly="false" width="481">
                <box class="invis-container" halign="center" orientation="h" width="481">
                    <start_search/>
                </box>
                <box class="invis-container" halign="center" orientation="h" width="481">
                    <start_home/>
                </box>
                <box class="invis-container" halign="center" orientation="v" width="481">
                    <m1-left-buttons/>
                    <system-box/>
                </box>
                <box class="invis-container" halign="center" orientation="h" width="481">
                    <quote/>
                </box>
            </box>
        </def>
        <def name="quote">
            <box orientation="v" space-evenly="false" class="container" width="481" height="310">
                <label class="quote-main" halign="center" text="{{quote-gen}}{{quote}}" width="460" height="300"/>
                <label class="quote-author" text="- {{author-quote}}" halign="end" width="200"/>
            </box>
        </def>
        <def name="start_search">
            <button class="search-side" onclick="/home/pjackim/.config/rofi/launchers/misc/launcher.sh" width="481">  Search...</button>
        </def>
        <def name="start_home">
            <box class="invis-container" orientation="h" space-evenly="false" width="481">
                <profile/>
                <home_dir/>
            </box>
        </def>
        <def name="m1-left-buttons">
            <box class="invis-container" orientation="v" space-evenly="false" width="481">
                <button_pack_1/>
            </box>
        </def>
        <def name="button_pack_1">
            <box class="invis-container btn-large" orientation="h" space-evenly="true" width="481">
                <screenshot/>
                <!-- <google-chrome/> -->
                <opera/>
                <vscode/>
            </box>
        </def>
        <def name="system-box">
            <box orientation="h" space-evenly="true" class="v-label-container LtR" width="481">
                <!-- Nerd Font -->
                <!-- <button class="shutdown-side nerdfont" onclick="shutdown 0">󰐥</button>
                <button class="reboot-side nerdfont" onclick="./scripts/reboot.sh">󰑐</button>
                <button class="lock-side nerdfont" onclick="./scripts/lockscreen.sh"></button>
                <button class="suspend-side nerdfont" onclick="./scripts/suspend.sh">⏾</button>
                <button class="logout-side nerdfont" onclick="./scripts/logout.sh">󰍃</button> -->
                
                <!-- Font Awesome 6 Pro -->
                <!--      -->
                <button class="shutdown-side btn-large" onclick="shutdown 0"></button>
                <button class="reboot-side btn-large" onclick="./scripts/reboot.sh"></button>
                <button class="lock-side btn-large" onclick="./scripts/lockscreen.sh"></button>
                <button class="suspend-side btn-large" onclick="./scripts/suspend.sh"></button>
                <button class="logout-side btn-large" onclick="./scripts/logout.sh"></button>
            </box>
        </def>
        <def name="home_dir">
            <box orientation="v" space-evenly="true" class="v-label-container LtR">
                <button class="text-medium" onclick="(thunar ~/{{l1}})" width="215">{{l1-processed}}</button>
                <button class="text-medium" onclick="(thunar ~/{{l2}})" width="215">{{l2-processed}}</button>
                <button class="text-medium" onclick="(thunar ~/{{l3}})" width="215">{{l3-processed}}</button>
                <button class="text-medium" onclick="(thunar ~/{{l4}})" width="215">{{l4-processed}}</button>
                <button class="text-medium" onclick="(thunar ~/{{l5}})" width="215">{{l5-processed}}</button>
                <button class="text-medium" onclick="(thunar ~/{{l6}})" width="215">{{l6-processed}}</button>
            </box>
        </def>
        <def name="profile">
            <box orientation="v" space-evenly="false" class="container">
                <box orientation="h" space-evenly="false">
                    <box class="pfp">
                    </box>
                </box>
                <box class="invis-container" orientation="v" space-evenly="false" valign="center">
                    <box class="profile_text" halign="center" orientation="h" space-evenly="false">
                        <label class="auth" text="u"/>
                        <label class="slash" text="/"/>
                        <label class="user" text="pjackim"/>
                    </box>
                    <box class="subpfptxt" halign="center"> sudo</box>
                </box>
            </box>
        </def>
    </definitions>
    <windows>
        <window name="m1-left" exclusive="false" focusable="false" stacking="bg">
            <geometry x="5px" y="67px" width="25%" height="949px"/>
            <widget>
                <m1-left-package/>
            </widget>
        </window>
    </windows>
</eww>