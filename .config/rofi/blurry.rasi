configuration {

    /*font:                     "iosveka term 12";*/
    font:                       "IosevkaTerm Nerd Font Mono 12";
    show-icons:                 true;
    icon-theme:                 "Papirus";
    display-drun:               "ï€‚";
    drun-display-format:        "{name}";
    disable-history:            false;
    sidebar-mode:               false;
}


* {
    clear:                      #00000000;
    background:                 #2D313D7F;
    background-alt:             transparent;
    background-bar:             #445F6C;
    foreground:                 #D9A362;
    accent:                     #F2DC6D;
    accentlight:                #F2DC6D22;
    entry:                      #2D313D;
    text-color:                 @foreground;
    background-color:           @background;
    font:                       "IosevkaTerm Nerd Font Mono 12";
}

message {
    background-color:           @background;
    padding:                    0%;
    border:                     0px;
    border-radius:              10px;
    border-color:               @foreground;
}

textbox {
    background-color:           @clear;
    text-color:                 @foreground;
    padding:                    1.5%;
    markup:                     true;
    horizontal-align:           0;
    border:                     2px;
    border-radius:              10px;
    border-color:               @foreground;
}


window {
    background-color:           transparent;
    text-color:                 @foreground;
    border:                     0px;
    border-color:               transparent;
    border-radius:              12px;
    width:                      49%;
    location:                   center;
    x-offset:                   0;
    y-offset:                   0;
}

prompt {
    enabled:                    true;
    padding:                    0.30% 0% 0% -0.5%;
    background-color:           @clear;
    text-color:                 @accent;
}

entry {
    background-color:               @clear;
    text-color:                     @foreground;
    placeholder-color:              @foreground;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "";
    padding:                        0.30% 0% 0% 1%;
    blink:                          true;
    
}

inputbar {
    children:                   [ prompt, entry ];
    background-color:           @background;
    text-color:                 @foreground;
    expand:                     false;
    border:                     0% 0% 0% 0%;
    border-radius:              12px;
    border-color:               @accent;
    margin:                     0% 0% 0% 0%;
    padding:                    1.5%;
    border:                     2px;
    border-radius:              10px;
    border-color:               @foreground;
}

listview {
    background-color:           @background;
    columns:                    5;
    lines:                      3;
    fixed-height:               false;
    spacing:                    1%;
    cycle:                      false;
    border:                     0% 0% 0% 0%;
    border-radius:              12px;
    border-color:               @accent;
    dynamic:                    true;
    layout:                     vertical;
    margin:                     1.5% 0% 0% 0%;
    /*require-input:            true; */
}

mainbox {
    background-color:           @background-alt;
    border:                     0% 0% 0% 0%;
    border-radius:              12px;
    border-color:               @accent;
    /*children:                 [ inputbar, listview ];*/
    spacing:                    0%;
    padding:                    0% 0% 0% 0%;
}

element {
    background-color:               @clear;
    text-color:                     @foreground;
    orientation:                    vertical;
    border-radius:                  0%;
    padding:                        2% 0% 2% 0%;
}

element-icon {
    background-color:                 @clear;
    text-color:                       inherit;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           64px;
    border:                         0px;
}

element-text {
    background-color:           @clear;
    text-color:                 inherit;
    expand:                     true;
    horizontal-align:           0.5;
    vertical-align:             0.5;
    margin:                     0.5% 0.5% -0.5% 0.5%;
    markup:                     true;
}

element selected {
    background-color:           @accentlight;
    text-color:                 @foreground;
    border:                     1px;
    border-radius:              12px;
    border-color:               @accent;
}
