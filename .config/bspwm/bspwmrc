#! /bin/bash
export PYTHONPATH="/home/pjackim/.pyenv/customlibs/"

killall greenclip
killall nitrogen
killall sxhkd
killall polybar
killall eww
killall picom


# Clipboard daemon
greenclip daemon &

# Disable Sleep
xset s off -dpms

# Enable Bluetooth
bluetoothctl power on &

# Monitor Layout
$HOME/.screenlayout/monitor_layout_3.sh

# Yakuake
ps -C yakuake >/dev/null && echo "Running" || yakuake &


# Nitrogen
nitrogen --restore &

# SXHKD
sxhkd &

# Polybar
$HOME/.config/polybar/shapes/launch.sh &

# Workspace Initialization
$HOME/.config/bspwm/workspace.sh

#Rules
$HOME/.config/bspwm/rules.sh

# Startup script for Eww and associated desktop windows
startup &

# Picom
picom -f --config /home/pjackim/.config/picom/picom.conf --no-fading-openclose &


# Drive Mounting
# sudo mount.ntfs /dev/nvme0n1p5 /Z
# sudo mount.ntfs /dev/nvme0n1p6 /X
