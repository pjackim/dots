#! /bin/sh

# Enable Bluetooth
bluetoothctl power on &

# Monitor Layout
$HOME/.screenlayout/monitor_layout.sh

# Picom
# $HOME/.config/picom/picom_launcher &

# Nitrogen
nitrogen --restore &

# SXHKD
sxhkd &

# Polybar
$HOME/.config/polybar/shapes/launch.sh &

# # Workspace Initialization
$HOME/.config/bspwm/workspace.sh

#Rules
$HOME/.config/bspwm/rules.sh

startup &
picom -f --config /home/pjackim/.config/picom/picom.conf --experimental-backends --no-fading-openclose &